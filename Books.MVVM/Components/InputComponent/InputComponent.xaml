<UserControl x:Class="Books.MVVM.Components.InputComponent.InputComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Books.MVVM.Components.InputComponent"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="Root">
    <StackPanel Orientation="Horizontal">
        <Label Content="{Binding ElementName=Root, Path=Label, Mode=OneWay}"
               Width="100"/>
        <TextBox Text="{Binding ElementName=Root, Path=Input, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Width="300"/>
    </StackPanel>
</UserControl>
